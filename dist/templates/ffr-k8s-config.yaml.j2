apiVersion: frrk8s.metallb.io/v1beta1
kind: FRRConfiguration
metadata:
  name: {{ node }}-receive-all
  namespace: frr-k8s-system
spec:
  bgp:
    routers:
    - asn: 64512
      neighbors:
{%- set x = peers|string %}
{%- for peer in x.split(' ') %}
      - address: {{ peer }}
        asn: 64512
        toReceive:
          allowed:
            mode: all
{%- endfor %}
  nodeSelector:
    matchLabels:
      kubernetes.io/hostname: {{ node }}
